<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/netflixLogo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="Netflix Logo"
            android:src="@drawable/netflix_logo" />

        <TextView
            android:id="@+id/textManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/netflixLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Manager:"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FF0000" />




        <!-- movies manage -->

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navView"
            style="@style/RedNavigationView"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/nav_menu"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            app:backgroundTint="@android:color/holo_red_dark"
            app:tint="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:contentDescription="Open navigation drawer"
            android:src="@drawable/ic_plus" />

        <LinearLayout
            android:id="@+id/layoutMovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">

            <Button
                android:id="@+id/btnCreateMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="create movie" />

            <Button
                android:id="@+id/btnDeleteMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delete movie"
                android:layout_marginTop="8dp" />

            <!-- create movie form -->
            <LinearLayout
                android:id="@+id/formCreateMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="16dp">

                <EditText
                    android:id="@+id/etMovieName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="movie name" />

                <EditText
                    android:id="@+id/etMovieCategoryId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="category id" />

                <EditText
                    android:id="@+id/etMovieDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="movie description" />

                <Button
                    android:id="@+id/btnSelectVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="select video" />

                <Button
                    android:id="@+id/btnSelectPoster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="select poster" />

                <Button
                    android:id="@+id/btnConfirmCreateMovie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="create movie"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- delete movie form -->
            <LinearLayout
                android:id="@+id/formDeleteMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="16dp">

                <EditText
                    android:id="@+id/etMovieId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="movie id" />

                <Button
                    android:id="@+id/btnConfirmDeleteMovie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="delete movie"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- category manage -->
        <LinearLayout
            android:id="@+id/layoutCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">

            <Button
                android:id="@+id/btnCreateCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="create category" />

            <Button
                android:id="@+id/btnDeleteCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delete category"
                android:layout_marginTop="8dp" />

            <!-- category creation form-->
            <LinearLayout
                android:id="@+id/formCreateCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="16dp">

                <EditText
                    android:id="@+id/etCategoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="category name" />

                <Button
                    android:id="@+id/btnConfirmCreateCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="create category"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- category deletion form -->
            <LinearLayout
                android:id="@+id/formDeleteCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="16dp">

                <EditText
                    android:id="@+id/etCategoryId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="category id" />

                <Button
                    android:id="@+id/btnConfirmDeleteCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="delete category"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnMovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E50914"
            android:text="movies manage" />

        <Button
            android:id="@+id/btnCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#E50914"
            android:text="category manage" />

        <Switch
            android:id="@+id/switch_toggle"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@id/fab"
            android:text=""
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>
