<resources>
    <!-- Light Mode Navigation View -->
    <style name="RedNavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@drawable/nav_drawer_background</item>
        <item name="itemTextColor">@color/black</item> <!-- Black text for light mode -->
        <item name="itemIconTint">@color/black</item> <!-- Black icons for light mode -->
        <item name="itemBackground">@drawable/button_background</item>
        <item name="itemTextAppearance">@style/NavMenuTextAppearance</item>
    </style>

    <style name="NavMenuTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>