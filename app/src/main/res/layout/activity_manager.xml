<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Netflix Logo -->
    <ImageView
        android:id="@+id/netflixLogo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="Netflix Logo"
        android:src="@drawable/netflix_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Manager Text -->
    <TextView
        android:id="@+id/textManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manager:"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/netflixLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Movies Manage Button -->
    <Button
        android:id="@+id/btnMovies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="movies manage"
        android:backgroundTint="#E50914"
        app:layout_constraintTop_toBottomOf="@id/textManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Categories Manage Button -->
    <Button
        android:id="@+id/btnCategories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="category manage"
        android:backgroundTint="#E50914"
        app:layout_constraintTop_toBottomOf="@id/btnMovies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Movies Layout -->
    <LinearLayout
        android:id="@+id/layoutMovies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCategories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- Create Movie Button -->
        <Button
            android:id="@+id/btnCreateMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="create movie" />

        <!-- Delete Movie Button -->
        <Button
            android:id="@+id/btnDeleteMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="delete movie"
            android:layout_marginTop="8dp" />

        <!-- Create Movie Form -->
        <LinearLayout
            android:id="@+id/formCreateMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">

            <!-- Movie Name -->
            <EditText
                android:id="@+id/etMovieName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="movie name" />

            <!-- Movie Category ID -->
            <EditText
                android:id="@+id/etMovieCategoryId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="category id" />

            <!-- Movie Description -->
            <EditText
                android:id="@+id/etMovieDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="movie description" />

            <!-- Select Video Button -->
            <Button
                android:id="@+id/btnSelectVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="select video" />

            <!-- Select Poster Button -->
            <Button
                android:id="@+id/btnSelectPoster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="select poster" />

            <!-- Confirm Create Movie Button -->
            <Button
                android:id="@+id/btnConfirmCreateMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="create movie"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Delete Movie Form -->
        <LinearLayout
            android:id="@+id/formDeleteMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">

            <!-- Movie ID -->
            <EditText
                android:id="@+id/etMovieId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="movie id" />

            <!-- Confirm Delete Movie Button -->
            <Button
                android:id="@+id/btnConfirmDeleteMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delete movie"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Categories Layout -->
    <LinearLayout
        android:id="@+id/layoutCategories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCategories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- Create Category Button -->
        <Button
            android:id="@+id/btnCreateCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="create category" />

        <!-- Delete Category Button -->
        <Button
            android:id="@+id/btnDeleteCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="delete category"
            android:layout_marginTop="8dp" />

        <!-- Create Category Form -->
        <LinearLayout
            android:id="@+id/formCreateCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">

            <!-- Category Name -->
            <EditText
                android:id="@+id/etCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="category name" />

            <!-- Confirm Create Category Button -->
            <Button
                android:id="@+id/btnConfirmCreateCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="create category"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Delete Category Form -->
        <LinearLayout
            android:id="@+id/formDeleteCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">

            <!-- Category ID -->
            <EditText
                android:id="@+id/etCategoryId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="category id" />

            <!-- Confirm Delete Category Button -->
            <Button
                android:id="@+id/btnConfirmDeleteCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delete category"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Floating Action Button (FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_plus"
        android:contentDescription="Open navigation drawer"
        app:backgroundTint="@android:color/holo_red_dark"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Switch for Background Toggle -->
    <Switch
        android:id="@+id/switch_toggle"
        android:layout_width="77dp"
        android:layout_height="79dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fab" />

</androidx.constraintlayout.widget.ConstraintLayout>